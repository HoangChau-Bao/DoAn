                    <tbody id="myTable">
                      {{#each nguoidung}}
                         <tr>
                            <td>{{TaiKhoan}}</td>
                            <td>{{HoTen}}</td>
                            <td>{{SDT}}</td>
                            <td>{{Email}}</td>                            
                            <td>{{DiaChi}}</td>
                            <td>{{ChucVu}}</td>
                            <td>{{TrangThai}}</td>

                            <td>
                                <form action="/admin/changeuserstatus" method="POST">
                                    <input type="hidden" name="ID" value="{{ID}}">
                                    <button type="submit" class="btn btn-success">Đổi trạng thái</button>
                                </form>
                            </td>

                        </tr>
                                               
                        {{/each}}
                    </tbody>
                </table>
