<div class="admin-side" style="height: 1800px;">
    <div class="admin-page-title">
      <p>Order Management</p>
    </div>


    <div class ="site-main" >
        <div class="container">
            
             

            <!-- form handling -->
            
                <table class="table table-bordered table-striped mydataTable">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Tên khách</th>
                            <th>Ngày mua</th>
                            <th>Ngày xác nhận</th>
                            <th>Trạng thái</th>
                            <th>Tổng hóa đơn</th>
                            <th>Địa chỉ giao hàng</th>
                            <th>Số điện thoại</th>
                            <th>Xác nhận</th>
                            <th>Hủy</th>
                            <th>Xem</th>
                        </tr>
                    </thead>
                    <tbody id="myTable">
                      {{#each hoadon}}
                        <tr>
                            <td>{{this.IDHoaDon}}</td>
                            <td>{{this.HoTen}}</td>
                            <td>{{this.NgayMuaHang}}</td>
                            <td>{{this.NgayXacNhan}}</td>
                            <td>{{this.TrangThai}}</td>
                            <td>{{number this.TongHoaDon}} VNĐ</td>
                            <td>{{this.DiaChiGiaoHang}}</td>
                            <td>{{this.SoDienThoaiDatHang}}</td>
                            <form action="/admin/confirmbill" method="post">
                              <input type="hidden" name="IDHoaDon" value="{{this.IDHoaDon}}">
                              <td><button class="btn btn-success"><i class="fa fa-check-circle" aria-hidden="true"></i></button></td>
                            </form>
                            <form action="/admin/deletebill" method="post">
                              <input type="hidden" value="{{this.IDHoaDon}}">
                              <td><button class="btn btn-danger"><i class="fa fa-ban" aria-hidden="true"></i></button></td>
                            </form>
                            <form action="/admin/billdetail" method="get">
                              <input type="hidden" value="{{this.IDHoaDon}}">
                              <td><button class="btn btn-primary"><i class="fa fa-info-circle" aria-hidden="true"></i></button></td>
                            </form>
                            
                        </tr>                                           
                        {{/each}}
                    </tbody>
                </table>
        </div>
    </div>

